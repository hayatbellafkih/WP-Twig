{#
/**
 * The header for our theme.
 *
 * Displays all of the <head> section and everything up till <div id="content">
 *
 * @package Oblique
 */
#}<!DOCTYPE html>
<html {{ language_attributes() }}>
<head>
<meta charset="{{  bloginfo( 'charset' ) }}">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="profile" href="http://gmpg.org/xfn/11">
<link rel="pingback" href="{{ bloginfo( 'pingback_url' ) }}">

{% if(get_theme_mod('site_favicon')) %}
	<link rel="shortcut icon" href="{{ esc_url(get_theme_mod('site_favicon')) }}" />
{% endif %}

{{ wp_head() }}
</head>

<body {{ body_class }}>
<div id="page" class="hfeed site">
	<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content', 'oblique' ) }}</a>
	<div class="sidebar-toggle"><i class="fa fa-bars"></i></div>

	{% if ( has_nav_menu( 'social' ) ) %}
		<nav class="social-navigation container clearfix">
	{{  wp_nav_menu({'theme_location' : 'social', 'link_before' : '<span class="screen-reader-text">', 'link_after' : '</span>', 'menu_class' : 'menu clearfix', 'fallback_cb' : false}) }}
		</nav>
	{% endif %}

	<div class="svg-container nav-svg svg-block">
		{{ call('oblique_svg_3') }}
	</div>
	<header id="masthead" class="site-header" role="banner">
		<div class="overlay"></div>
		<div class="container">
			<div class="site-branding">
	        {% if ( get_theme_mod('site_logo') and get_theme_mod('logo_style', 'hide-title') == 'hide-title' )  %}
				<a href="{{ esc_url( home_url( '/' ) ) }}" title="{{ esc_attr(get_bloginfo('name')) }}"><img class="site-logo" src="{{ esc_url(get_theme_mod('site_logo')) }}" alt="{{ esc_attr(get_bloginfo('name')) }}" /></a>
	       {% elseif ( get_theme_mod('logo_style', 'hide-title') == 'show-title' )  %}
				<a href="{{ esc_url( home_url( '/' ) ) }}" title="{{ esc_attr(get_bloginfo('name')) }}"><img class="site-logo show-title" src="{{ esc_url(get_theme_mod('site_logo')) }}" alt="{{ esc_attr(get_bloginfo('name')) }}" /></a>
				<h1 class="site-title"><a href="{{ esc_url( home_url( '/' ) ) }}" rel="home">{{ bloginfo( 'name' ) }}</a></h1>
				<h2 class="site-description">{{ bloginfo( 'description' ) }}</h2>	        
	       {% else %}
				<h1 class="site-title"><a href="{{ esc_url( home_url( '/' ) ) }}" rel="home">{{ bloginfo( 'name' ) }}</a></h1>
				<h2 class="site-description">{{ bloginfo( 'description' ) }}</h2>
	       {% endif %}
			</div><!-- .site-branding -->
		</div>
		<div class="svg-container header-svg svg-block">
	{{ call('oblique_svg_1') }}
		</div>		
	</header><!-- #masthead -->

	<div id="content" class="site-content">
		<div class="container">