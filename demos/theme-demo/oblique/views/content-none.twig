{# 

/**
 * The template part for displaying a message that posts cannot be found.
 *
 * Learn more: http://codex.wordpress.org/Template_Hierarchy
 *
 * @package Oblique
 */
#}

<section class="no-results not-found">
	<header class="page-header">
		<h1 class="page-title"><?php _e( 'Nothing Found', 'oblique' ); ?></h1>
	</header><!-- .page-header -->

	<div class="page-content">
		{% if ( is_home() and current_user_can( 'publish_posts' ) ) %}

		{% set ready='Ready to publish your first post? <a href="' ~ esc_url( admin_url( 'post-new.php' ) ) ~ '">Get started here</a>'  %}
			<p>{{ __( ready, 'oblique' ) }}</p>

		{% elseif ( is_search() ) %}

			<p>{{ _e( 'Sorry, but nothing matched your search terms. Please try again with some different keywords.', 'oblique' ) }}</p>
	{{ get_search_form() }}

		{% else %}

			<p>{{ _e( 'It seems we can&rsquo;t find what you&rsquo;re looking for. Perhaps searching can help.', 'oblique' ) }}</p>
		{{ get_search_form() }}

		{% endif %}
	</div><!-- .page-content -->
</section><!-- .no-results -->
